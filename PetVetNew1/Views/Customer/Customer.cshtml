@section Scripts
    {
    <script src="~/js/Components/tmpl-ddl.js"></script>
    <script src="~/js/Utilis.js"></script>
    <script src="~/js/ViewModel/CustomerViewModel.js"></script>
    <script type="text/javascript">
    customerViewModel.MapFromJson(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model)));
    </script>
}

    <div class="content-wrapper">
        <div id="preloader">
            <div id="status"></div>
        </div>
        <!-- Site wrapper -->
        <!-- Content Header (Page header) -->
        <section class="content-header">
                <a class="btn btn-add" asp-area="" asp-controller="customer" asp-action="CustomersList">
                    <i class="fa fa-plus"></i> Przejdź do listy klientów
                </a>
                <a data-bind="click: AddNew" class="btn btn-warning">Wyczysc</a>
                <a data-bind="click: Save" class="btn btn-success">Zapisz</a>
        </section>
        <!-- Main content -->
        <section class="content">
            <!--preloader-->          
            <div class="row">
                <!-- Form controls -->
                <div class="col-sm-7">
                    <div class="panel panel-bd ">
                        @*<div class="panel-heading">
                    <div class="btn-group">
                        <a>Lista klientów</a>
                    </div>
                </div>*@
                        <div class="panel-body">
                            <form class="col-sm-6">
                                <fieldset>
                                    <div class="form-group">
                                        <label>Imie</label>
                                        <input data-bind='value: CustFirstname' type="text" class="form-control" placeholder="Imie">
                                    </div>
                                    <div class="form-group">
                                        <label>Nazwisko</label>
                                        <input data-bind="value: CustLastname" type="text" class="form-control" placeholder="Nazwisko">
                                    </div>
                                    <div class="form-group">
                                        <label>E-mail</label>
                                        <input data-bind="value: CustMail" type="email" class="form-control" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label>Numer telefonu</label>
                                        <input data-bind="value: CustPhone" type="number" class="form-control" placeholder="Numer telefonu">
                                    </div>

                                    <div class="form-group">
                                        <label>Data urodzenia</label>
                                        <input data-bind="value: CustBirthdate" type="datetime" class="form-control" placeholder="Data urodzenia">
                                    </div>
                                    <div>
                                        <label>Przypisz pacjentów</label><br />
                                        <a data-bind="click: AddPet" class="btn btn-warning">Dodaj pacjentów</a>
                                    </div>
                                    <br />
                                </fieldset>
                            </form>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Ulica</label>
                                    <input data-bind="value: CustStreet" type="text" class="form-control" placeholder="Ulica">
                                </div>
                                <div class="form-group">
                                    <label>Numer domu</label>
                                    <input data-bind="value: CustHouse" type="text" class="form-control" placeholder="Numer domu">
                                </div>
                                <div class="form-group">
                                    <label>Numer lokalu</label>
                                    <input data-bind="value: CustFlat" type="text" class="form-control" placeholder="Numer lokalu">
                                </div>
                                <div class="form-group">
                                    <label>Miasto</label>
                                    <input data-bind="value: CustCity" type="text" class="form-control" placeholder="Miasto">
                                </div>
                                <div class="form-group">
                                    <label>Kod pocztowy</label>
                                    <input data-bind="value: CustCitycode" type="number" class="form-control" placeholder="Kod pocztowy">
                                </div>
                                <div class="form-group">
                                    <label>Zdjecie</label>
                                    <input type="file" name="picture">
                                    <input type="hidden" name="old_picture">
                                </div>
                            </div>
                          
                        </div>

                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="panel panel-bd ">
                        @*<div class="panel-heading">
