@model PetVET.Models.ItemViewModels.ItemViewModel
@{
    ViewData["Title"] = "AddItem";
    Layout = "~/Views/Shared/_LayoutVET.cshtml";
}

@section Scripts
    {
    <script src="~/js/Components/tmpl-ddl.js"></script>
    <script src="~/js/Utilis.js"></script>
    <script src="~/js/ViewModel/ItemViewModel.js"></script>
    <link href="~/js/Select/css/select2.css" rel="stylesheet" />
    <script src="~/js/Select/js/select2.js"></script>
    <script type="text/javascript">
        itemViewModel.MapFromJson(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model)));
        //itemViewModel.Dll();

        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <a data-bind="click: AddNew" class="btn btn-warning">Dodaj towar</a>
        <a data-bind="click: Save" class="btn btn-success">Save</a>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- Form controls -->
            <div class="col-sm-12">
                <div class="panel panel-bd ">
                    @*<div class="panel-heading">
