@model PetVET.Models.CustomerViewModels.CustomerViewModel

@{
    Layout = "_LayoutVET";
}
<!-- Content Wrapper. Contains page content -->
<!-- Knockout -->
@*<script src="Vendor/knockout/build/output/knockout-latest.js" type="text/javascript"></script>
    <script src="Vendor/knockout.validation/dist/knockout.validation.min.js" type="text/javascript"></script>
    <script src="Vendor/knockout-mapping/dist/knockout.mapping.min.js" type="text/javascript"></script>*@
<!-- End Knockout -->

@section Scripts
    {
    <script src="~/js/Components/tmpl-ddl.js"></script>
    <script src="~/js/Utilis.js"></script>
    <script src="~/js/ViewModel/CustomerViewModel.js"></script>
    <script type="text/javascript">
    customerViewModel.MapFromJson(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model)));
    </script>
}

    <div class="content-wrapper">
        <div id="preloader">
            <div id="status"></div>
        </div>
        <!-- Site wrapper -->
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="header-icon">
                <i class="fa fa-users"></i>
            </div>
            <div class="header-title">
                <h1>Dodaj Klienta</h1>
                <small>Nowy klient</small>
            </div>
        </section>
        <!-- Main content -->
        <section class="content">
            <!--preloader-->          
            <div class="row">
                <!-- Form controls -->
                <div class="col-sm-12">
                    <div class="panel panel-bd lobidrag">
                        <div class="panel-heading">

                            <div class="btn-group" id="buttonlist">
                                <a class="btn btn-add" asp-area="" asp-controller="customer" asp-action="CustomersList">
                                    <i class="fa fa-plus"></i> Lista Klientów
                                </a>
                            </div>
                        </div>
                        <div class="panel-body">
                            <form class="col-sm-8">
                                <fieldset>
                                    <div class="form-group">
                                        <label>Imie</label>
                                        <input data-bind='value: FirstName' type="text" class="form-control" placeholder="Imie">
                                    </div>
                                    <div class="form-group">
                                        <label>Nazwisko</label>
                                        <input data-bind="value: LastName" type="text" class="form-control" placeholder="Nazwisko">
                                    </div>
                                    <div class="form-group">
                                        <label>E-mail</label>
                                        <input data-bind="value: Mail" type="email" class="form-control" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label>Numer telefonu</label>
                                        <input data-bind="value: PhonNumber" type="number" class="form-control" placeholder="Numer telefonu">
                                    </div>
                                    <div class="form-group">
                                        <label>Ulica</label>
                                        <input data-bind="value: Street" type="text" class="form-control" placeholder="Ulica">
                                    </div>
                                    <div class="form-group">
                                        <label>Numer domu</label>
                                        <input data-bind="value: HouseNumber" type="number" class="form-control" placeholder="Numer domu">
                                    </div>
                                    <div class="form-group">
                                        <label>Numer lokalu</label>
                                        <input data-bind="value: FlatNumber" type="number" class="form-control" placeholder="Numer lokalu">
                                    </div>
                                    <div class="form-group">
                                        <label>Miasto</label>
                                        <input data-bind="value: City" type="text" class="form-control" placeholder="Miasto">
                                    </div>
                                    <div class="form-group">
                                        <label>Kod pocztowy</label>
                                        <input data-bind="value: CityCode" type="number" class="form-control" placeholder="Kod pocztowy">
                                    </div>
                                    <div class="form-group">
                                        <label>Data urodzenia</label>
                                        <input data-bind="value: DateOfBirth" type="date" class="form-control" placeholder="Data urodzenia">
                                    </div>
                                    <div>
                                        <label>Przypisz pacjentów</label><br />
                                        <a data-bind="click: AddPet" class="btn btn-warning">Dodaj pacjentów</a>
                                    </div>
                                    <div class="form-group">
                                        <label>Zdjecie</label>
                                        <input type="file" name="picture">
                                        <input type="hidden" name="old_picture">
                                    </div>

                                    <tmpl-ddl params='{data: optionData,
        name:"Kolor",
        selectedValue : SelectedValue,
        caption: "Wybierz kolor",
        callback: SelectedValueCallback }'></tmpl-ddl>

                                    <div class="form-check">
                                        <label>Nowy Klient</label><br>
                                        <label class="radio-inline">
                                            <input data-bind="checked: IsNewCustomer" type="radio" name="status" value="1" checked="checked">Tak
                                        </label>
                                        <label class="radio-inline">
                                            <input data-bind="checked: IsNewCustomer" type="radio" name="status" value="0">Nie
                                        </label>
                                    </div>

                                    <div class="reset-button">
                                        <a data-bind="click: AddNew" class="btn btn-warning">Wyczysc</a>
                                        <a data-bind="click: Save" class="btn btn-success">Zapisz</a>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
<!-- /.content-wrapper -->
