@model PetVET.Models.EmployeesViewModels.EmployeesViewModel
@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_LayoutVET.cshtml";
}

@section Scripts
    {
    <script src="~/js/Components/tmpl-ddl.js"></script>
    <script src="~/js/Utilis.js"></script>
    <script src="~/js/ViewModel/EmployeesViewModel.js"></script>
    <script type="text/javascript">
    employeesViewModel.MapFromJson(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model)));
    </script>
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
            <a class="btn btn-add " href="clist.html">
                  Przejdź do listy pracowników
            </a>
            <a data-bind="click: AddNew" class="btn btn-warning">Wyczyść</a>
            <a data-bind="click: Save" class="btn btn-success">Zapisz</a>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- Form controls -->
            <div class="col-sm-12">
                <div class="panel panel-bd lobidrag">
                    <div class="panel-heading">
                        <div class="btn-group">
                            <a>Lista pacjentów</a>
                        </div>
                    </div>
                    <div class="panel-body">
                        
                        <form class="col-sm-12">
                            <fieldset>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Imię</label>
                                        <input data-bind='value: Name' type="text" class="form-control" placeholder="Imię" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Nazwiesko</label>
                                        <input data-bind="value: LastName" type="text" class="form-control" placeholder="Nazwisko"required>
                                    </div>
                                    <div class="form-group">
                                        <label>E-mail</label>
                                        <input data-bind="value: Email" type="email" class="form-control" placeholder="E-mail"required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Numer PWZ</label>
                                            <input data-bind="value: PWZNumber" type="number" class="form-control" placeholder="Numer PWZ">
                                        </div>
                                        <div class="form-group">
                                            <label>Adres</label>
                                            <input data-bind="value: Address" type="text" class="form-control" placeholder="Adres">
                                        </div>
                                        <div class="form-check">
                                            <label>Posiada konto ?</label><br>
                                            <label class="radio-inline">
                                                <input data-bind="checked: UserAdded" type="radio" name="status" value="1">Tak
                                            </label>
                                            <label class="radio-inline">
                                                <input data-bind="checked: UserAdded" type="radio" name="status" value="0" checked="checked">Nie
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Telefon</label>
                                            <input data-bind="value: PhoneNumber" type="number" class="form-control" placeholder="Telefon">
                                        </div>
                                        <tmpl-ddl params='{data: PermitOptionData,
                                                            name:"Uprawnienia",
                                                            selectedValue : Uprawnienia,
                                                            caption: "Wybierz",
                                                            callback: SelectedValueCallback }'></tmpl-ddl>
                                        <div>
                                            <label>Utwórz konto</label><br />
                                            <a data-bind="click: AddUser" class="btn btn-warning">Utwórz konto</a>
                                        </div>
                                    </div>
                                 </div>
</fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
